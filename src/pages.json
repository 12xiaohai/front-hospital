{
  // 组件自动引入规则
  "easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "中医药小程序"
      }
    },
    {
      "path": "pages/patient/appointment",  // 预约医生页面
      "style": {
        "navigationBarTitleText": "预约医生"
      }
    },
    {
      "path": "pages/patient/consultation",  // 在线问诊页面
      "style": {
        "navigationBarTitleText": "在线问诊"
      }
    },
    {
      "path": "pages/patient/healthData",  // 身体数据监测页面
      "style": {
        "navigationBarTitleText": "身体数据监测"
      }
    },
    {
      "path": "pages/patient/mall",  // 在线商城页面
      "style": {
        "navigationBarTitleText": "在线商城"
      }
    },
    {
      "path": "pages/login/login",  // 登录页面
      "style": {
        "navigationBarTitleText": "登录"
      }
    },
    {
      "path": "pages/my/my",  // 添加个人中心页面
      "style": {
        "navigationBarTitleText": "个人中心"
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "中医小程序",
    "navigationBarBackgroundColor": "#2dcec6",
    "backgroundColor": "#F8F8F8"
  },
  "tabBar": {
  "color": "#333",
  "selectedColor": "#27ba9b",
  "backgroundColor": "#fff",
  "borderStyle": "white",
  "list": [
    {
      "text": "首页",
      "pagePath": "pages/index/index",
      "iconPath": "static/tabs/home_default.png",
      "selectedIconPath": "static/tabs/home_selected.png"
    },
    {
      "text": "健康管理",
      "pagePath": "pages/patient/healthData",
      "iconPath": "static/tabs/health_default.png",
      "selectedIconPath": "static/tabs/health_selected.png"
    },
    {
      "text": "我的",
      "pagePath": "pages/my/my",
      "iconPath": "static/tabs/user_default.png",
      "selectedIconPath": "static/tabs/user_selected.png"
    }
  ]
}
}
